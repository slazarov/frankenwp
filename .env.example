# FrankenWP Configuration Example
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=db
DB_USER=exampleuser
DB_PASSWORD=examplepass
DB_NAME=exampledb
DB_ROOT_PASSWORD=examplepass
DB_TABLE_PREFIX=wp_

# WordPress Configuration
WP_DEBUG=false
SERVER_NAME=:80

# Cache Configuration
CACHE_LOC=/var/www/html/wp-content/cache
TTL=6000
PURGE_PATH=/__cache/purge
PURGE_KEY=your-secure-purge-key-here
BYPASS_HOME=false
BYPASS_PATH_PREFIXES=/wp-admin,/wp-content,/wp-includes,/wp-json,/feed
CACHE_RESPONSE_CODES=000

# Cloudflare Configuration
# Get your Zone ID from: https://dash.cloudflare.com/ -> Select your domain -> Overview (right sidebar)
# Create an API Token at: https://dash.cloudflare.com/profile/api-tokens -> Create Token -> "Edit zone DNS" template
# Required permissions: Zone.Cache Purge
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id_here
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Port Configuration
LOCAL_DB_PORT=3311
LOCAL_PHPMYADMIN_PORT=8086
